+  SetLength(Name, MAX_PATH+1);
+  Result:=GetVolumeInformationU(PUnicodeChar(Dir), nil, 0, nil, nil, @Flags, nil, 0);
+  if Result then CaseSensitive:=(Flags and FILE_CASE_SENSITIVE_SEARCH) > 0;
+end;
